    USER ||--o{ RECIPE : creates
    USER ||--o{ COMMENT : writes
    USER ||--o{ FAVORITE : saves

    RECIPE ||--o{ COMMENT : receives
    RECIPE ||--o{ FAVORITE : saved_in
